datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Branch {
  @@map("branch")
  name String @id @unique
  items Item[]
}

model Item {
  @@map("item")
  name String @id @unique
  stock Int?
  brand String
  subbranch String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  branch_name String
  branch Branch  @relation(fields: [branch_name], references: [name])
}

